    <div class="toast" id="toast"></div>

    <script>
        let currentDate = new Date();
        let selectedDate = new Date();
        let events = JSON.parse(localStorage.getItem('agendaEvents')) || {};
        let streakData = JSON.parse(localStorage.getItem('streakData')) || { count: 0, lastDate: null };
        let pomodoroStats = JSON.parse(localStorage.getItem('pomodoroStats')) || { count: 0 };
        let currentPriority = 'medium';
        let pomodoroInterval = null;
        let pomodoroTime = 25 * 60;
        let pomodoroRunning = false;
        let currentPomodoroTask = null;

        const procrastinationPainPoints = [
            { icon: 'üìö', title: 'Ler 15 minutos', category: 'Crescimento', pain: 'Acumular livros n√£o lidos', micro: ['Separar livro', 'Ler 5 p√°ginas', 'Anotar ideia'] },
            { icon: 'üèÉ', title: 'Treinar 30min', category: 'Sa√∫de', pain: 'Sedentarismo', micro: ['Trocar roupa', 'Aquecer 5min', 'Exerc√≠cio principal'] },
            { icon: 'ü•ó', title: 'Preparar refei√ß√£o', category: 'Sa√∫de', pain: 'Comer mal', micro: ['Ver receita', 'Separar ingredientes', 'Cozinhar'] },
            { icon: 'üíß', title: 'Beber 2L √°gua', category: 'Sa√∫de', pain: 'Desidrata√ß√£o', micro: ['Encher garrafa', 'Beber 1 copo', 'Marcar hor√°rios'] },
            { icon: 'üò¥', title: 'Dormir 8h', category: 'Sa√∫de', pain: 'Exaust√£o', micro: ['Desligar telas', 'Rotina sono', 'Deitar'] },
            { icon: 'üßπ', title: 'Limpar c√¥modo', category: 'Organiza√ß√£o', pain: 'Bagun√ßa', micro: ['Guardar objetos', 'Passar pano', 'Organizar'] },
            { icon: 'üìß', title: 'Responder e-mails', category: 'Trabalho', pain: 'Inbox lotado', micro: ['Abrir 5 e-mails', 'Responder urgentes', 'Arquivar'] },
            { icon: 'üíä', title: 'Agendar consulta', category: 'Sa√∫de', pain: 'Adiar m√©dico', micro: ['Pesquisar', 'Ligar', 'Anotar data'] },
            { icon: 'üí∞', title: 'Organizar finan√ßas', category: 'Finan√ßas', pain: 'Descontrole', micro: ['Ver extrato', 'Categorizar', 'Planejar'] },
            { icon: 'üéØ', title: 'Foco profundo 25min', category: 'Produtividade', pain: 'Distra√ß√µes', micro: ['Fechar abas', 'Timer 25min', 'Anotar interrup√ß√µes'] },
            { icon: 'üìû', title: 'Ligar fam√≠lia', category: 'Relacionamentos', pain: 'Isolamento', micro: ['Escolher contato', 'Ligar 5min', 'Marcar encontro'] },
            { icon: 'üé®', title: 'Hobby criativo', category: 'Bem-estar', pain: 'Vida mon√≥tona', micro: ['Preparar material', 'Praticar 15min', 'Guardar'] },
            { icon: 'üìù', title: 'Planejar semana', category: 'Organiza√ß√£o', pain: 'Falta dire√ß√£o', micro: ['Revisar calend√°rio', 'Listar 3 prioridades', 'Agendar'] },
            { icon: 'üßò', title: 'Medita√ß√£o 10min', category: 'Sa√∫de Mental', pain: 'Ansiedade', micro: ['Achar app', 'Respirar 1min', 'Meditar'] },
            { icon: 'üíº', title: 'Tarefa dif√≠cil', category: 'Trabalho', pain: 'Adiar projeto', micro: ['Dividir em partes', 'Fazer 1¬™ parte', 'Revisar'] },
            { icon: 'üå±', title: 'Estudar idioma', category: 'Crescimento', pain: 'Metas abandonadas', micro: ['App 5min', 'Vocabul√°rio', 'Praticar'] },
            { icon: 'üõí', title: 'Compras semana', category: 'Organiza√ß√£o', pain: 'Falta itens', micro: ['Ver despensa', 'Fazer lista', 'Ir mercado'] },
            { icon: 'üöø', title: 'Auto-cuidado', category: 'Sa√∫de', pain: 'Neglig√™ncia', micro: ['Banho relaxante', 'Skin care', 'Roupas confort√°veis'] },
            { icon: 'üì±', title: 'Desconectar 1h', category: 'Sa√∫de Mental', pain: 'V√≠cio digital', micro: ['Deixar longe', 'Atividade offline', 'Refletir'] },
            { icon: 'ü§ù', title: 'Networking', category: 'Carreira', pain: 'Perder oportunidades', micro: ['Atualizar LinkedIn', 'Mensagem 1 pessoa', 'Agendar caf√©'] }
        ];

        document.addEventListener('DOMContentLoaded', () => {
            checkStreak();
            renderCalendar();
            updateTodayFocus();
            renderEvents();
            updateStats();
            setupSuggestions();
            renderPatternChart();
            checkTwoMinuteRule();
            updateRewards();
            
            if ('Notification' in window && Notification.permission === 'default') {
                setTimeout(() => {
                    document.getElementById('notifBanner').classList.add('show');
                }, 2000);
            }
        });

        function checkStreak() {
            const today = formatDateKey(new Date());
            const yesterday = formatDateKey(new Date(Date.now() - 86400000));
            
            if (streakData.lastDate === today) {
            } else if (streakData.lastDate === yesterday) {
                streakData.lastDate = today;
            } else {
                if (streakData.lastDate !== today) {
                    streakData.count = 0;
                    streakData.lastDate = today;
                }
            }
            saveStreak();
            updateStreakUI();
        }

        function updateStreakUI() {
            document.getElementById('streakCount').textContent = streakData.count;
            if (streakData.count > 0) {
                document.getElementById('streakBadge').style.display = 'flex';
            }
        }

        function saveStreak() {
            localStorage.setItem('streakData', JSON.stringify(streakData));
        }

        function incrementStreak() {
            const today = formatDateKey(new Date());
            if (streakData.lastDate !== today) {
                streakData.count++;
                streakData.lastDate = today;
                saveStreak();
                updateStreakUI();
                showToast(`üî• Streak de ${streakData.count} dias!`);
            }
        }

        function renderCalendar() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            
            document.getElementById('monthDisplay').textContent = 
                new Date(year, month).toLocaleDateString('pt-BR', { month: 'long', year: 'numeric' });

            const firstDay = new Date(year, month, 1).getDay();
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            const daysInPrevMonth = new Date(year, month, 0).getDate();

            const grid = document.getElementById('calendarGrid');
            grid.innerHTML = '';

            for (let i = firstDay - 1; i >= 0; i--) {
                grid.appendChild(createDayElement(daysInPrevMonth - i, true));
            }

            for (let i = 1; i <= daysInMonth; i++) {
                const date = new Date(year, month, i);
                const day = createDayElement(i, false);
                const dateKey = formatDateKey(date);
                
                if (events[dateKey] && events[dateKey].length > 0) {
                    day.classList.add('has-event');
                }

                if (isToday(date)) day.classList.add('today');
                if (isSameDay(date, selectedDate)) day.classList.add('selected');
                if (hasCompletedTasks(dateKey)) day.classList.add('streak-day');

                day.onclick = () => selectDate(date);
                grid.appendChild(day);
            }

            const remaining = (7 - ((firstDay + daysInMonth) % 7)) % 7;
            for (let i = 1; i <= remaining; i++) {
                grid.appendChild(createDayElement(i, true));
            }
        }

        function hasCompletedTasks(dateKey) {
            return events[dateKey] && events[dateKey].some(e => e.completed);
        }

        function createDayElement(dayNum, isOtherMonth) {
            const div = document.createElement('div');
            div.className = 'day';
            if (isOtherMonth) div.classList.add('other-month');
            div.textContent = dayNum;
            return div;
        }

        function selectDate(date) {
            selectedDate = date;
            renderCalendar();
            updateTodayFocus();
            renderEvents();
        }

        function changeMonth(delta) {
            currentDate.setMonth(currentDate.getMonth() + delta);
            renderCalendar();
        }

        function goToToday() {
            currentDate = new Date();
            selectedDate = new Date();
            renderCalendar();
            updateTodayFocus();
            renderEvents();
        }

        function renderPatternChart() {
            const chart = document.getElementById('patternChart');
            const days = ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'S√°b'];
            const today = new Date().getDay();
            
            chart.innerHTML = '';
            
            days.forEach((day, index) => {
                const bar = document.createElement('div');
                bar.className = 'pattern-bar';
                const productivity = Math.floor(Math.random() * 80) + 20;
                bar.style.height = productivity + '%';
                
                if (index === today) bar.classList.add('active');
                if (productivity < 30) bar.classList.add('procrastination');
                
                bar.innerHTML = `
                    <div class="pattern-value">${productivity}%</div>
                    <div class="pattern-label">${day}</div>
                `;
                
                chart.appendChild(bar);
            });
        }

        function updateTodayFocus() {
            const isToday = isSameDay(selectedDate, new Date());
            const dateStr = selectedDate.toLocaleDateString('pt-BR', { 
                weekday: 'long', 
                day: 'numeric', 
                month: 'long' 
            });

            document.getElementById('focusDate').textContent = isToday ? 
                `Hoje, ${dateStr}` : dateStr.charAt(0).toUpperCase() + dateStr.slice(1);

            const dateKey = formatDateKey(selectedDate);
            const dayEvents = events[dateKey] || [];

            if (dayEvents.length === 0) {
                document.getElementById('focusQuestion').textContent = 
                    isToday ? 'Qual compromisso vamos agendar hoje?' : 'Nenhum compromisso agendado';
            } else {
                const nextEvent = dayEvents.find(e => !e.completed) || dayEvents[0];
                document.getElementById('focusQuestion').textContent = 
                    isToday ? `Pr√≥ximo: ${nextEvent.title}` : `Pr√≥ximo: ${nextEvent.title}`;
            }

            const chips = document.getElementById('suggestionChips');
            chips.innerHTML = '';
            const shuffled = [...procrastinationPainPoints].sort(() => 0.5 - Math.random()).slice(0, 3);
            
            shuffled.forEach(suggestion => {
                const chip = document.createElement('button');
                chip.className = 'suggestion-chip';
                chip.innerHTML = `${suggestion.icon} ${suggestion.title}`;
                chip.onclick = () => quickAdd(suggestion);
                chips.appendChild(chip);
            });
        }

        function quickAdd(suggestion) {
            document.getElementById('eventTitle').value = suggestion.title;
            document.getElementById('enableMicro').checked = true;
            openModal();
        }

        function renderEvents() {
            const dateKey = formatDateKey(selectedDate);
            const dayEvents = events[dateKey] || [];
            const list = document.getElementById('eventsList');

            if (dayEvents.length === 0) {
                list.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">üìÖ</div>
                        <div>Nenhum compromisso agendado</div>
                        <div style="font-size: 14px; margin-top: 8px;">Toque em + para adicionar</div>
                    </div>
                `;
                return;
            }

            list.innerHTML = dayEvents.map((event, index) => `
                <div class="event-card priority-${event.priority}">
                    <div class="event-icon">${event.icon || 'üìå'}</div>
                    <div class="event-details">
                        <div class="event-title" style="${event.completed ? 'text-decoration: line-through; opacity: 0.6;' : ''}">${event.title}</div>
                        <div class="event-meta">
                            <span>${event.time}</span>
                            <span class="event-priority priority-${event.priority}">${event.priority}</span>
                        </div>
                        ${event.microTasks ? `
                            <div class="micro-tasks">
                                ${event.microTasks.map((mt, i) => `
                                    <div class="micro-task">
                                        <input type="checkbox" ${mt.done ? 'checked' : ''} 
                                            onchange="toggleMicroTask('${dateKey}', ${index}, ${i})">
                                        <span style="${mt.done ? 'text-decoration: line-through; opacity: 0.6;' : ''}">${mt.text}</span>
                                    </div>
                                `).join('')}
                            </div>
                        ` : ''}
                    </div>
                    <div class="event-actions">
                        <button class="pomodoro-btn ${currentPomodoroTask === index ? 'running' : ''}" 
                                onclick="startPomodoro('${dateKey}', ${index}, '${event.title}')">
                            ‚è±
                        </button>
                        <div class="event-check ${event.completed ? 'completed' : ''}" 
                             onclick="toggleComplete('${dateKey}', ${index})">
                            ${event.completed ? '‚úì' : ''}
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function toggleMicroTask(dateKey, eventIndex, microIndex) {
            if (!events[dateKey] || !events[dateKey][eventIndex].microTasks) return;
            
            events[dateKey][eventIndex].microTasks[microIndex].done = 
                !events[dateKey][eventIndex].microTasks[microIndex].done;
            
            saveEvents();
            renderEvents();
            
            const allDone = events[dateKey][eventIndex].microTasks.every(mt => mt.done);
            if (allDone && !events[dateKey][eventIndex].completed) {
                showToast('üéâ Micro-tarefas conclu√≠das!');
            }
        }

        function toggleComplete(dateKey, index) {
            if (!events[dateKey]) return;
            events[dateKey][index].completed = !events[dateKey][index].completed;
            
            if (events[dateKey][index].completed) {
                createConfetti();
                incrementStreak();
                updateRewards();
                showToast('‚úÖ Tarefa conclu√≠da!');
            }
            
            saveEvents();
            renderEvents();
            updateStats();
            renderCalendar();
            updateTodayFocus();
        }

        function updateRewards() {
            const today = formatDateKey(new Date());
            const todayEvents = events[today] || [];
            const completedToday = todayEvents.filter(e => e.completed).length;
            
            document.getElementById('tasksForReward').textContent = completedToday;
            const progress = Math.min((completedToday / 3) * 100, 100);
            document.getElementById('rewardProgress').style.width = progress + '%';
            
            const rewardBtn = document.getElementById('rewardBtn');
            if (completedToday >= 3) {
                rewardBtn.classList.remove('disabled');
                rewardBtn.textContent = 'üéâ Desbloquear Recompensa!';
            } else {
                rewardBtn.classList.add('disabled');
                rewardBtn.textContent = `üéØ Complete mais ${3 - completedToday} tarefa(s)`;
            }
        }

        function claimReward() {
            const today = formatDateKey(new Date());
            const todayEvents = events[today] || [];
            const completedToday = todayEvents.filter(e => e.completed).length;
            
            if (completedToday >= 3) {
                createConfetti();
                showToast('üéâ Parab√©ns! Voc√™ desbloqueou 30min de lazer!');
                
                if (!events[today]) events[today] = [];
                events[today].push({
                    title: 'üéâ Tempo de Lazer!',
                    time: new Date().toLocaleTimeString('pt-BR', {hour: '2-digit', minute:'2-digit'}),
                    priority: 'low',
                    icon: 'üéÆ',
                    completed: false,
                    isReward: true
                });
                
                saveEvents();
                renderEvents();
                updateStats();
            }
        }

        function startPomodoro(dateKey, index, title) {
            currentPomodoroTask = index;
            document.getElementById('pomodoroTaskTitle').textContent = title;
            document.getElementById('pomodoroOverlay').classList.add('active');
            pomodoroTime = 25 * 60;
            updatePomodoroDisplay();
        }

        function togglePomodoro() {
            const btn = document.getElementById('pomodoroToggle');
            
            if (pomodoroRunning) {
                clearInterval(pomodoroInterval);
                pomodoroRunning = false;
                btn.textContent = '‚ñ∂';
                btn.classList.remove('running');
            } else {
                pomodoroRunning = true;
                btn.textContent = '‚è∏';
                btn.classList.add('running');
                
                pomodoroInterval = setInterval(() => {
                    pomodoroTime--;
                    updatePomodoroDisplay();
                    
                    if (pomodoroTime <= 0) {
                        completePomodoro();
                    }
                }, 1000);
            }
        }

        function updatePomodoroDisplay() {
            const minutes = Math.floor(pomodoroTime / 60);
            const seconds = pomodoroTime % 60;
            document.getElementById('pomodoroTimer').textContent = 
                `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            const progress = ((25 * 60 - pomodoroTime) / (25 * 60)) * 100;
            document.getElementById('pomodoroProgress').style.width = progress + '%';
        }

        function completePomodoro() {
            clearInterval(pomodoroInterval);
            pomodoroRunning = false;
            pomodoroStats.count++;
            localStorage.setItem('pomodoroStats', JSON.stringify(pomodoroStats));
            updateStats();
            
            createConfetti();
            showToast('üçÖ Pomodoro completo! +1 foco');
            
            document.getElementById('pomodoroToggle').textContent = '‚ñ∂';
            document.getElementById('pomodoroToggle').classList.remove('running');
            pomodoroTime = 25 * 60;
            updatePomodoroDisplay();
        }

        function resetPomodoro() {
            clearInterval(pomodoroInterval);
            pomodoroRunning = false;
            pomodoroTime = 25 * 60;
            updatePomodoroDisplay();
            document.getElementById('pomodoroToggle').textContent = '‚ñ∂';
            document.getElementById('pomodoroToggle').classList.remove('running');
        }

        function closePomodoro() {
            clearInterval(pomodoroInterval);
            pomodoroRunning = false;
            document.getElementById('pomodoroOverlay').classList.remove('active');
            currentPomodoroTask = null;
            renderEvents();
        }

        function checkTwoMinuteRule() {
            setTimeout(() => {
                const quickTasks = ['√°gua', 'email', 'ligar', 'mensagem', 'agendar'];
                const today = formatDateKey(new Date());
                const todayEvents = events[today] || [];
                
                const hasQuickTask = todayEvents.some(e => 
                    quickTasks.some(qt => e.title.toLowerCase().includes(qt))
                );
                
                if (hasQuickTask && Math.random() > 0.5) {
                    document.getElementById('twoMinuteBanner').classList.add('show');
                }
            }, 3000);
        }

        function dismissTwoMinute() {
            document.getElementById('twoMinuteBanner').classList.remove('show');
        }

        function requestNotificationPermission() {
            if ('Notification' in window) {
                Notification.requestPermission().then(permission => {
                    if (permission === 'granted') {
                        document.getElementById('notifBanner').classList.remove('show');
                        showToast('‚úÖ Notifica√ß√µes ativadas!');
                        scheduleNotifications();
                    }
                });
            }
        }

        function scheduleNotifications() {
            const reminders = [
                { time: 9, title: '‚òÄÔ∏è Bom dia!', body: 'Qual sua tarefa mais importante hoje?' },
                { time: 14, title: '‚ö° Meio do dia', body: 'J√° bebeu √°gua hoje? Fez uma pausa?' },
                { time: 17, title: 'üèÅ Fim do expediente', body: 'Revise o que completou hoje!' },
                { time: 21, title: 'üåô Preparar para dormir', body: 'Evite telas 30min antes de dormir' }
            ];

            reminders.forEach(reminder => {
                const now = new Date();
                const scheduled = new Date();
                scheduled.setHours(reminder.time, 0, 0, 0);
                
                if (scheduled > now) {
                    setTimeout(() => {
                        new Notification(reminder.title, { body: reminder.body });
                    }, scheduled - now);
                }
            });
        }

        function shareWithBuddy() {
            const email = document.getElementById('buddyEmail').value;
            if (!email) {
                showToast('‚ùå Digite um e-mail v√°lido');
                return;
            }
            
            const today = formatDateKey(new Date());
            const todayEvents = events[today] || [];
            const completed = todayEvents.filter(e => e.completed).length;
            const total = todayEvents.length;
            
            const message = `Ol√°! Completei ${completed}/${total} tarefas hoje! üî• Streak: ${streakData.count} dias`;
            
            showToast('üì§ Progresso compartilhado!');
            console.log(`Enviando para ${email}: ${message}`);
        }

        function openModal() {
            document.getElementById('eventModal').classList.add('active');
            document.getElementById('eventTime').value = 
                new Date().toLocaleTimeString('pt-BR', { hour: '2-digit', minute: '2-digit', hour12: false });
        }

        function closeModal() {
            document.getElementById('eventModal').classList.remove('active');
            document.getElementById('eventTitle').value = '';
        }

        function selectPriority(priority) {
            currentPriority = priority;
            document.querySelectorAll('.priority-btn').forEach(btn => btn.classList.remove('selected'));
            event.target.classList.add('selected');
        }

        function setupSuggestions() {
            const grid = document.getElementById('suggestionsGrid');
            procrastinationPainPoints.forEach(point => {
                const btn = document.createElement('button');
                btn.className = 'suggestion-btn';
                btn.innerHTML = `${point.icon} ${point.title}`;
                btn.onclick = () => {
                    document.getElementById('eventTitle').value = point.title;
                };
                grid.appendChild(btn);
            });
        }

        function saveEvent() {
            const title = document.getElementById('eventTitle').value.trim();
            const time = document.getElementById('eventTime').value;
            const enableMicro = document.getElementById('enableMicro').checked;
            
            if (!title) {
                showToast('‚ùå Digite um t√≠tulo');
                return;
            }

            const dateKey = formatDateKey(selectedDate);
            if (!events[dateKey]) events[dateKey] = [];

            const suggestion = procrastinationPainPoints.find(p => 
                title.toLowerCase().includes(p.title.toLowerCase()) || 
                p.title.toLowerCase().includes(title.toLowerCase())
            );

            let microTasks = null;
            if (enableMicro && suggestion) {
                microTasks = suggestion.micro.map((mt, i) => ({
                    text: `${i + 1}. ${mt}`,
                    done: false
                }));
            }

            events[dateKey].push({
                title,
                time,
                priority: currentPriority,
                icon: suggestion ? suggestion.icon : 'üìå',
                completed: false,
                microTasks,
                createdAt: new Date().toISOString()
            });

            events[dateKey].sort((a, b) => a.time.localeCompare(b.time));

            saveEvents();
            closeModal();
            renderEvents();
            renderCalendar();
            updateStats();
            updateTodayFocus();
            updateRewards();
            
            showToast('‚úÖ Compromisso agendado!');
        }

        function saveEvents() {
            localStorage.setItem('agendaEvents', JSON.stringify(events));
        }

        function updateStats() {
            const today = formatDateKey(new Date());
            const todayEvents = events[today] || [];
            document.getElementById('todayCount').textContent = todayEvents.length;

            let weekCount = 0;
            const curr = new Date();
            const first = curr.getDate() - curr.getDay();
            for (let i = 0; i < 7; i++) {
                const day = new Date(curr.setDate(first + i));
                const key = formatDateKey(day);
                weekCount += (events[key] || []).length;
            }
            document.getElementById('weekCount').textContent = weekCount;

            let completed = 0;
            Object.values(events).forEach(dayEvents => {
                completed += dayEvents.filter(e => e.completed).length;
            });
            document.getElementById('completedCount').textContent = completed;
            document.getElementById('pomodoroCount').textContent = pomodoroStats.count;
        }

        function formatDateKey(date) {
            return date.toISOString().split('T')[0];
        }

        function isToday(date) {
            return isSameDay(date, new Date());
        }

        function isSameDay(d1, d2) {
            return d1.getDate() === d2.getDate() &&
                   d1.getMonth() === d2.getMonth() &&
                   d1.getFullYear() === d2.getFullYear();
        }

        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        function createConfetti() {
            const colors = ['#007AFF', '#34C759', '#FF9500', '#FF3B30', '#AF52DE'];
            for (let i = 0; i < 30; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + 'vw';
                    confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.animationDuration = (Math.random() * 2 + 2) + 's';
                    confetti.style.top = '0';
                    document.body.appendChild(confetti);
                    setTimeout(() => confetti.remove(), 4000);
                }, i * 50);
            }
        }

        document.getElementById('eventModal').addEventListener('click', (e) => {
            if (e.target === e.currentTarget) closeModal();
        });
    </script>
</body>
</html>
